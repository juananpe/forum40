FROM python:3.9

# system packages
RUN apt-get update && apt-get install -y \
  python-pybind11 \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /usr/src/app

COPY ./requirements.txt ./
RUN pip install -r requirements.txt

EXPOSE 5050
CMD ["python", "/usr/src/app/run.py", "serve", "--debug", "--port", "5050"]
